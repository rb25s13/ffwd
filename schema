DROP TABLE IF EXISTS texas_fires;
DROP TABLE IF EXISTS ACRES_BY_CAUSE;
DROP TABLE IF EXISTS ACRES_BY_CLASS;
DROP TABLE IF EXISTS ACRES_BY_YEAR;
DROP TABLE IF EXISTS YEAR_RANGES;
DROP TABLE IF EXISTS SPI-TX;
DROP TABLE IF EXISTS PALEO-TX;

--create a table for texas_fires
CREATE TABLE texas_fires (
    STATE character varying(20) NOT NULL,
    FIRE_YEAR INTEGER NOT NULL,
	FIRE_SIZE REAL NOT NULL,
	FIRE_SIZE_CLASS CHARACTER VARYING (20) NOT NULL,
	STAT_CAUSE_DESCR CHARACTER VARYING (40) NOT NULL,
	LATITUDE REAL NOT NULL,
	LONGITUDE REAL NOT NULL
);

-- create a table for acres_by_cause 
CREATE TABLE ACRES_BY_CAUSE (
	STAT_CAUSE_DESCR character varying(20) NOT NULL,
	FIRE_SIZE REAL NOT NULL
);

-- Create a table for acres_by_class
CREATE TABLE ACRES_BY_CLASS (
	FIRE_SIZE_CLASS varchar(5) NOT NULL,
	FIRE_SIZE REAL NOT NULL
);

-- Create a table for acres_by_year
CREATE TABLE ACRES_BY_YEAR (
	FIRE_YEAR INTEGER NOT NULL,
	FIRE_SIZE REAL NOT NULL
);

-- Create a table for year ranges
CREATE TABLE YEAR_RANGES (
	ID INTEGER NOT NULL,
	YEAR INTEGER NOT NULL
);

-- Create a table for SPI 
CREATE TABLE SPI (
	SPI_INDEX REAL NOT NULL,
	DATE INTEGER NOT NULL,
	D0 REAL NOT NULL,
	D1 REAL NOT NULL,
	D2 REAL NOT NULL,
	D3 REAL NOT NULL,
	D4 REAL NOT NULL,
	W0 REAL NOT NULL,
	W1 REAL NOT NULL,
	W2 REAL NOT NULL,
	W3 REAL NOT NULL,
	W4 REAL NOT NULL
);
	
	
	
-- Create a table for Paleo
CREATE TABLE PALEO (
	PMDI REAL NOT NULL,
	DATE INTEGER NOT NULL,
	D0 REAL NOT NULL,
	D1 REAL NOT NULL,
	D2 REAL NOT NULL,
	D3 REAL NOT NULL,
	D4 REAL NOT NULL,
	W0 REAL NOT NULL,
	W1 REAL NOT NULL,
	W2 REAL NOT NULL,
	W3 REAL NOT NULL,
	W4 REAL NOT NULL
);